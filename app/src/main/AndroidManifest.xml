<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ch.bfh.edgewars">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.GameActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:parentActivityName=".ui.activities.LevelDetailActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.LevelDetailActivity"/>
        </activity>
        <activity
            android:name=".ui.activities.AboutActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".ui.activities.MainActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.activities.LevelSelectionActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".ui.activities.MainActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.MainActivity"/>
        </activity>
        <activity
            android:name=".ui.activities.LevelDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".ui.activities.LevelSelectionActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.LevelSelectionActivity"/>
        </activity>
        <activity
            android:name=".ui.activities.WinActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".ui.activities.LevelDetailActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.LevelDetailActivity"/>
        </activity>
        <activity
            android:name=".ui.activities.LoseActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName=".ui.activities.LevelDetailActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.LevelDetailActivity"/>
        </activity>
    </application>

</manifest>
